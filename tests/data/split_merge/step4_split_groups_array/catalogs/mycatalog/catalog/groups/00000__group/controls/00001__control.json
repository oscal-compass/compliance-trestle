                "parts": [
                    {
                        "id": "ac-2.3_smt",
                        "name": "statement",
                        "prose": "Disable accounts when the accounts:",
                        "parts": [
                            {
                                "id": "ac-2.3_smt.a",
                                "name": "item",
                                "properties": [
                                    {
