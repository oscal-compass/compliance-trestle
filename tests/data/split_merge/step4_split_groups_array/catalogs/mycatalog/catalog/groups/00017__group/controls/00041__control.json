{
    "control": {
        "id": "sc-42",
        "class": "SP800-53",
        "title": "Sensor Capability and Data",
        "params": [
            {
                "id": "sc-42_prm_1",
                "select": {
                    "how-many": "one or more",
                    "choice": [
                        "the use of devices possessing {{ sc-42_prm_2 }} in {{ sc-42_prm_3 }} ",
                        "the remote activation of environmental sensing capabilities on organizational systems or system components with the following exceptions: {{ sc-42_prm_4 }} "
                    ]
                }
            },
            {
                "id": "sc-42_prm_2",
                "depends-on": "sc-42_prm_1",
                "label": "organization-defined environmental sensing capabilities"
            },
